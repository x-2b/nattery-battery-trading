# Database Configuration
DATABASE_URL="postgresql://nattery:password@postgres:5432/nattery"
POSTGRES_USER=nattery
POSTGRES_PASSWORD=password
POSTGRES_DB=nattery

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=nattery
INFLUXDB_BUCKET=energy_data

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://nattery:password@rabbitmq:5672
RABBITMQ_DEFAULT_USER=nattery
RABBITMQ_DEFAULT_PASS=password

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=nattery
MQTT_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys
ENTSOE_API_TOKEN=your-entsoe-api-token

# Service Ports
FRONTEND_PORT=3000
DEVICE_SERVICE_PORT=3001
TRADING_SERVICE_PORT=3002
ANALYTICS_SERVICE_PORT=3003
USER_SERVICE_PORT=3004
EDGE_BRIDGE_PORT=8000
GATEWAY_PORT=80
GATEWAY_SSL_PORT=443

# Modbus Configuration (Edge Bridge)
MODBUS_PORT=/dev/ttyUSB0
MODBUS_BAUDRATE=9600
MODBUS_SLAVE_ID=1
MODBUS_TIMEOUT=3
MODBUS_RETRY_COUNT=3
MODBUS_RETRY_DELAY=1.0
DATA_COLLECTION_INTERVAL=5
HEALTH_CHECK_INTERVAL=30
MAX_CONSECUTIVE_FAILURES=5
MAX_QUEUE_SIZE=100
COMMAND_TIMEOUT=30
DEVICE_ID=inverter-001
DEVICE_TYPE=inverter
DEVICE_MODEL=growatt-spf-5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Environment
NODE_ENV=development
PYTHON_ENV=development

# Security
CORS_ORIGIN=https://localhost
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@nattery.com

# Balena Configuration (Production)
BALENA_DEVICE_UUID=
BALENA_APP_NAME=nattery
BALENA_SUPERVISOR_API_KEY= 